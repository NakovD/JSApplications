{{>header}}
{{>notifications}}
<div class="container home some">
  <img class="det-img" src="{{imageLink}}" />
  <div class="desc">
    <h2 class="display-5">{{title}}</h2>
    <p class="infoType">Description:</p>
    <p class="idea-description">{{description}}</p>
    <p class="infoType">Likes: <large>{{likes}}</large>
    </p>
    <p class="infoType">Comments:</p>
    <ul>
      {{#each comments}}
      <li class="comment">{{name}}: {{comment}}</li>
      {{else}}
      <li class="comment">No comments yet :(</li>
      {{/each}}
    </ul>
  </div>
  {{#if isAuthor}}
  <div class="text-center">
    <a class="btn detb" href="#/delete/:{{ideaId}}">Delete</a>
  </div>
  {{else}}
  <form class="text-center" method="" action="">
      <textarea class="textarea-det" name="" id="comment"></textarea>
      <button type="submit" class="btn detb" >Comment</button>
      <a class="btn detb" href="#/like/:{{ideaId}}">Like</a>
    </form>
  {{/if}}
</div>
{{>footer}}