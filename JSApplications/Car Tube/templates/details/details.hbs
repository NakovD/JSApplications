{{>header}}
{{>notifications}}
<div class="listing-details">
    <div class="my-listing-details">
        <p id="auto-title">{{name}}</p>
        <img src="{{imageLink}}">
        <div class="listing-props">
            <h2>Brand: {{brand}}</h2>
            <h3>Model: {{model}}</h3>
            <h3>Year: {{year}}</h3>
            <h3>Fuel: {{fuelType}}</h3>
            <h3>Price: {{price}}$</h3>
        </div>
        <div class="listings-buttons">
            {{#if isAuthor}}
            <a href="#" class="button-list">Edit</a>
            <a href="#" class="button-list">Delete</a>
            {{/if}}
        </div>
        <p id="description-title">Description:</p>
        <p id="description-para">{{description}}</p>

    </div>
</div>
{{>footer}}