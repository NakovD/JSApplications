{{>header}}
{{>notifications}}
<div id="car-listings">
    <h1>Car Listings</h1>

    <div id="listings">
        {{#each cars}}
        <div class="listing">
            <p>{{name}}</p>
            <img src="{{imageLink}}">
            <h2>Brand: {{brand}}</h2>
            <div class="info">
                <div id="data-info">
                    <h3>Seller: {{seller}}</h3>
                    <h3>Fuel: {{fuelType}}</h3>
                    <h3>Year: {{year}}</h3>
                    <h3>Price: {{price}} $</h3>
                </div>
                <div id="data-buttons">
                    <ul>
                        <li class="action">
                            <a href="#/details/:{{id}}" class="button-carDetails">Details</a>
                        </li>
                        {{#if isAuthor}}
                        <li class="action">
                            <a href="#/editCar/:{{id}}" class="button-carDetails">edit</a>
                        </li>
                        <li class="action">
                            <a href="#/deleteCar/:{{id}}" class="button-carDetails">delete</a>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>

        </div>
        {{else}}
        <p class="no-cars">No cars in database.</p>
        {{/each}}
    </div>
</div>
{{>footer}}